<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="tarmii.theme"
      lang="en">

<body>
    <h1 class="documentFirstHeading" i18n:translate="Class performance for activity">
        Class Performance for Activity
    </h1>

    <tal:no-classlists tal:condition="not:view/classlists">
    <div i18n:translate="message_create_classlists">
        Please create some classlists, assessments and evaluations
    </div>
    </tal:no-classlists>

    <tal:got-classlists tal:condition="view/classlists">
    <div>
        <label for="classlist">Classlist: </label>
        <span id="classlist" tal:content="view/selectedClasslistTitle">classlist</span><br/>
        <label for="assessment">Assessment: </label>
        <span id="assessment" tal:content="view/selectedAssessmentTitle">Assessment</span><br/>
        <label for="activity">Activity: </label>
        <span id="activity" tal:content="view/selectedActivityTitle">Activity</span>
    </div>

    <img src="#" tal:attributes="src view/make_data_uri" />
    </tal:got-classlists>

</body>
</html>
