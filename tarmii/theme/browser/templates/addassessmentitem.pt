<metal:form metal:define-macro="form">

    <div class="portalMessage"
        tal:condition="view/status" tal:content="view/status">
    </div>

    <form action="." method="post" id="add-assessmentitem-form"
        tal:attributes="name view/formname;
                        action request/getURL; enctype view/enctype;
                        class view/kssformname">

    <fieldset tal:repeat="group view/groups"
              tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
        <legend tal:content="group/label" />
        <div class="field" tal:repeat="widget group/widgets/values">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </div>
    </fieldset>

        <div class="action">
            <input id="form-buttons-save" name="form.buttons.save" 
                    class="submit-widget button-field context" value="Save" type="submit">
        </div>
        <div class="action">
            <input id="form-buttons-cancel" name="form.buttons.cancel" 
                class="submit-widget button-field standalone" value="Cancel" type="submit">
        </div>

    </form>
    
</metal:form>
