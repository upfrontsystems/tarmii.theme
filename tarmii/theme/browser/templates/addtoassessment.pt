<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="tarmii.theme"
      lang="en">

<body>
    <metal:main fill-slot="main">
            
        <h3> Add activity to assessment</h3>

        <form>
        <div tal:repeat="assessment view/assessments">
            <select name="assessment_uid_selected">
                <option tal:repeat="assessment view/assessments"
                        tal:attributes="value assessment/UID"
                        tal:content="assessment/Title">
                </option>
            </select>
        </div>
        </form>

    </metal:main>
</body>
</html>

