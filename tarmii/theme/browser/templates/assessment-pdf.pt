<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
<html xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="tarmii.theme"
      lang="en">
<head>
    <base tal:attributes="href string:${here/portal_url}/" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <span tal:replace='structure string:<style>'/>
        <!-- Style for draft -->
        body{
            font-size:12pt;
        }

        h1.mainheader{
            font-size:160%;
            font-weight:bold;
            text-decoration:underline;
            text-align:center;
        }
        h2.questionheader{
            font-size:120%;
            font-weight:bold;
            margin-bottom: 0cm;
            padding-bottom: 0cm;
        }

        .questionoption{
            font-size:10pt;
            font-weight:bold;
        }

        p{
            font-size: 10pt;
            margin-top: 0cm;
            padding-top: 0cm;
            margin-bottom: 0cm;
            padding-bottom: 0cm;            
        }

        table.frontpage td {
            line-height: 3em;
        }

        table.frontpage td:first-child {
            width: 35%;
        }

        div#footerContent h3 {
            text-align: center;
        }

        div#pageNumber {
            text-align: center;
        }

        div.itemnumber {
            margin-left: -1cm;
        }

        div.learner-info {
            width:100%;
            text-align:center;
            display: block;
            margin-left: 1cm;
            margin-right: 0cm;
        }

        table.information {
            width: 80%;
            display: block;
            margin: 0cm !important;
        }

        table.information th {
            width: 20%;
            text-align: left;
            margin: 0cm !important;
            font-size: 125%;
        }
        table.information td {
            width: 40%;
            text-align: left;
            margin: 0cm !important;
        }

        div.activities {
            margin-left: 1cm;
            margin-right: 1cm;
        }

        div.activity-number {
            display: block;
            text-align: right;
            color: #bbb
        }

        /* The default style */
        @page {
            @frame {
                margin: 2cm;
            }
            @frame footer {
                -pdf-frame-content: footerContent;
                margin-left: 3cm;
                margin-right: 3cm;
                height: 5cm;
                bottom: 2cm;
            }
        }
        @page notfirst {
            top: 1cm;
            left: 2cm;
            right: 1cm;
            bottom: 2cm;
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
            }
        }
    <span tal:replace='structure string:</style>'/>
</head>
<body>
    <pdf:spacer height="1cm">

    <h1 class="mainheader"><span i18n:translate="heading_assessment_pdf">Assessment Task</span>
    </h1>
    
    <div>&nbsp;</div>
    <div class="learner-info">
        <table border="0" class="information">
            <tr>
                <th>
                    <span i18n:translate="label_learner_name">Learner Name</span><span>:</span>
                </th>
                <td>
                    <span>___________________________</span>
                </td>
            </tr>
            <tr>
                <th>                   
                    <span i18n:translate="label_school_name">School Name</span><span>:</span>                  
                </th>
                <td>
                    <span tal:content="view/school_name"></span>
                </td>
            </tr>
            <tal:topics condition="view/topictrees">  
            <tr tal:repeat="topictree view/topictrees">
                <th>                   
                    <span tal:content="topictree/title"></span><span>:</span>                  
                </th>
                <td>
                    <span tal:content="python:view.topics(topictree)"></span>
                </td>
            </tr>
            </tal:topics>
            <tr>
                <th>                   
                    <span i18n:translate="label_date">Date</span><span>:</span>
                </th>
                <td>
                    <span>___________________________</span>
                </td> 
            </tr>
        </table>
    </div>
 
    <div>&nbsp;</div>
    <div class="activities"
         tal:repeat="item view/activities">
        <h1><span tal:content="item/id"></span></h1>
        <div class="activity" tal:content="structure item/activity/output|nothing">
            The Activity
        </div>
        <div class="activity-number">
            <span tal:content="repeat/item/number"></span><span>. </span>
        </div>
        <hr class="item-separator"/>
    </div>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
