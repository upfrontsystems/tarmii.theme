<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
<html>
<head>
    <base tal:attributes="href string:${here/portal_url}/" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <span tal:replace='structure string:<style>'/>
        <!-- Style for draft -->
        body{
            font-size:12pt;
        }

        h1.mainheader{
            font-size:160%;
            font-weight:bold;
            text-decoration:underline;
            text-align:center;
        }
        h2.questionheader{
            font-size:120%;
            font-weight:bold;
            margin-bottom: 0cm;
            padding-bottom: 0cm;
        }

        .questionoption{
            font-size:10pt;
            font-weight:bold;
        }

        p{
            font-size: 10pt;
            margin-top: 0cm;
            padding-top: 0cm;
            margin-bottom: 0cm;
            padding-bottom: 0cm;
            
        }

        table.frontpage {
            margin-left: 1cm;
            margin-right: 1cm;
        }

        table.frontpage td {
            line-height: 3em;
        }

        table.frontpage td:first-child {
            width: 35%;
        }

        div#footerContent h3 {
            text-align: center;
        }

        div#pageNumber {
            text-align: center;
        }

        div.itemnumber {
            margin-left: -1cm;
        }
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
                -pdf-frame-border: 1;
            }
            @frame footer {
                -pdf-frame-content: footerContent;
                margin-left: 3cm;
                margin-right: 3cm;
                height: 5cm;
                bottom: 2cm;
            }
        }
        @page notfirst {
            top: 1cm;
            left: 2cm;
            right: 1cm;
            bottom: 2cm;
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
            }
        }
    <span tal:replace='structure string:</style>'/>
</head>
<body>
    <pdf:spacer height="1cm">
    <h1 class="mainheader"><span>Evaluation Sheet for </span><span tal:content="python:view.assessment().Title()"></span></h1>

    <div tal:repeat="item view/activities">
        <tal:def tal:define="act_index python:int(repeat['item'].index)">
        <h1 tal:content="item/id"></h1>
            <table class="listing"
                   tal:define="data view/evaluation_data">
                    <tr>
                        <th>Learner Name</th>
                        <div tal:repeat="rating item/rating_scale">
                            <th tal:content="python:rating['label']">Scale Heading</th>
                        </div>
                    </tr>
                    <tr tal:repeat="data_entry python:data[act_index]">
                        <td tal:content="python:data_entry['learner']">
                        </td>
                        <div tal:repeat="rating item/rating_scale">
                            <td tal:condition="python:data_entry['rating'] == repeat['rating'].number()">X</td>
                            <td tal:condition="not:python:data_entry['rating'] == repeat['rating'].number()"></td>
                        </div> -->
                    </tr>
                </table>


        <hr class="item-separator"/>
        </tal:def>
    </div>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
