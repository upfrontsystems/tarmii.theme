<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
<html xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="tarmii.theme"
      lang="en">
<head>
    <base tal:attributes="href string:${here/portal_url}/" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <span tal:replace='structure string:<style>'/>
        <!-- Style for draft -->
        body{
            font-size:12pt;
        }

        h1.mainheader{
            font-size:160%;
            font-weight:bold;
            text-decoration:underline;
            text-align:center;
        }
        h2.questionheader{
            font-size:120%;
            font-weight:bold;
            margin-bottom: 0cm;
            padding-bottom: 0cm;
            margin-left: 1cm;
            line-height: 2em;
        } 

        .questionoption{
            font-size:10pt;
            font-weight:bold;
        }

        p{
            font-size: 10pt;
            margin-top: 0cm;
            padding-top: 0cm;
            margin-bottom: 0cm;
            padding-bottom: 0cm;
            
        }
        
        table.frontpage td,
        table.frontpage th {
            padding: 2px 0 1px 0;
            margin: 0px;
            text-align: center;
        }

        table.frontpage {
            margin-left: 1cm;
            margin-right: 1cm;
            border: 1px;
            page-break-after: always;

        }

        table.frontpage td:first-child {
            width: 40%;
        }

        div#footerContent h3 {
            text-align: center;
        }

        div#pageNumber {
            text-align: center;
        }
    
        div.itemnumber {
            margin-left: -1cm;
        }
        /* The default style */
        @page {
            @frame {
                margin: 2cm;               
            }
            @frame footer {
                -pdf-frame-content: footerContent;
                margin-left: 3cm;
                margin-right: 3cm;
                height: 5cm;
                bottom: 2cm;
            }
        }
        @page notfirst {
            top: 1cm;
            left: 2cm;
            right: 1cm;
            bottom: 2cm;
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
            }
        }
    <span tal:replace='structure string:</style>'/>
</head>
<body>
    <pdf:spacer height="1cm">

    <h1 class="mainheader"><span i18n:translate="heading_evaluationsheet_pdf">Evaluation Sheet for </span><span tal:content="view/assessment_title"></span></h1>

    <div tal:repeat="item view/activities">
        <h2 class="questionheader" tal:content="item/id"></h2>
            <table border="1" class="frontpage">
                <tr>
                   <th i18n:translate="label_learner_name">Learner Name</th>
                   <div tal:repeat="rating item/rating_scale">
                       <th tal:content="python:rating['label']">Scale Heading</th>
                   </div>
                </tr>
                <tr tal:repeat="learner view/learners">
                   <td tal:content="learner/title">
                   </td>
                   <div tal:repeat="rating item/rating_scale">
                       <td></td>
                   </div>
                </tr>
            </table>
    </div>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
