<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="tarmii.theme"
      lang="en">

<body>
    <metal:main fill-slot="main">
    
        <div id="content">
            <div id="content-core">
            <h1>RESOURCES</h1>
            
            <!-- XXX The button must only be shown if the user has the "AddPortalContent" permission in the resources folder. -->
            <form id="add-resource-form" name="add-resource-form" tal:attributes="action view/add_resource_button_path">
                <input type="submit" value="Add resource" tal:attributes="action view/add_resource_button_path">
            </form>

            <tal:topictrees tal:condition="not:view/find_topic_trees">
                <div>No resources found in the system.</div>
            </tal:topictrees>

            <tal:topictrees tal:condition="view/find_topic_trees">
                <div tal:repeat="topictree view/find_topic_trees">                        
                            <div tal:content="topictree/Title">TITLE</div>
                </div>
            </tal:topictrees>

            </div>
        </div>

    </metal:main>
</body>
</html>
