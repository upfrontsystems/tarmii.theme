<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
<html xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="tarmii.theme"
      lang="en">
<head>
    <base tal:attributes="href string:${here/portal_url}/" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <span tal:replace='structure string:<style>'/>
        <!-- Style for draft -->
        body{
            font-size:12pt;
        }

        h1.mainheader{
            font-size:160%;
            font-weight:bold;
            text-decoration:underline;
            text-align:center;
        }
        h2.questionheader{
            font-size:120%;
            font-weight:bold;
            margin-bottom: 0cm;
            padding-bottom: 0cm;
            margin-left: 1cm;
            line-height: 2em;
        } 

        .questionoption{
            font-size:10pt;
            font-weight:bold;
        }

        p{
            font-size: 10pt;
            margin-top: 0cm;
            padding-top: 0cm;
            margin-bottom: 0cm;
            padding-bottom: 0cm;            
        }
        
        table.frontpage td,
        table.frontpage th {
            padding: 0px;
            margin: 0px;
            text-align: center;
        }

        table.frontpage {
            margin-left: 1cm;
            margin-right: 1cm;
            page-break-after: always;
        }

        table.frontpage td:first-child,
        table.frontpage th:first-child {
            width: 40%;
            text-align: left;
        }

        table.frontpage td,
        table.frontpage th {
            padding-top: 4px;
        }

        div#footerContent h3 {
            text-align: center;
        }

        div#pageNumber {
            text-align: center;
        }
    
        div.itemnumber {
            margin-left: -1cm;
        }
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
            }
            @frame footer {
                -pdf-frame-content: footerContent;
                margin-left: 3cm;
                margin-right: 3cm;
                height: 5cm;
                bottom: 2cm;
            }
        }
        @page notfirst {
            top: 1cm;
            left: 2cm;
            right: 1cm;
            bottom: 2cm;
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
            }
        }
        /* normal rating scale */
        table.listing tbody tr td.mattred,
        table.listing tbody tr.odd td.mattred {
            background-color : #d02027;
        }
        table.listing tbody tr td.mattgreen,
        table.listing tbody tr.odd td.mattgreen {
            background-color : #6dce25;
        }
        table.listing tbody tr td.deepblue,
        table.listing tbody tr.odd td.deepblue {
            background-color : #17c5e4;
        }
        table.listing tbody tr td.gold,
        table.listing tbody tr.odd td.gold {
            background-color : #E90;
        }

        /* custom rating scales */
        table.listing tbody tr td.red,
        table.listing tbody tr.odd td.red {
            background-color : #cc0000;
        }
        table.listing tbody tr td.redorange,
        table.listing tbody tr.odd td.redorange {
            background-color : #ff3300;
        }
        table.listing tbody tr td.orange,
        table.listing tbody tr.odd td.orange {
            background-color : #ff6600;
        }
        table.listing tbody tr td.yelloworange,
        table.listing tbody tr.odd td.yelloworange {
            background-color : #ff9900;
        }
        table.listing tbody tr td.pink,
        table.listing tbody tr.odd td.pink {
            background-color : #ff9966;
        }
        table.listing tbody tr td.yellowgreen,
        table.listing tbody tr.odd td.yellowgreen {
            background-color : #c0cc00;
        }
        table.listing tbody tr td.pregreen,
        table.listing tbody tr.odd td.pregreen {
            background-color : #00cc00;
        }
        table.listing tbody tr td.green,
        table.listing tbody tr.odd td.green {
            background-color : #1a921a;
        }
        table.listing tbody tr td.bluegreen,
        table.listing tbody tr.odd td.bluegreen {
            background-color : #009999;
        }
        table.listing tbody tr td.blue,
        table.listing tbody tr.odd td.blue {
            background-color : #17c5e4;
        }
        table.listing tbody tr td.blueviolet,
        table.listing tbody tr.odd td.blueviolet {
            background-color : #396dd4;
        }
        table.listing tbody tr td.violet,
        table.listing tbody tr.odd td.violet {
            background-color : #874dc1;
        }
        table.listing tbody tr td.redviolet,
        table.listing tbody tr.odd td.redviolet {
            background-color : #9933cc;
        }
        table.listing tbody tr td.brown1,
        table.listing tbody tr.odd td.brown1 {
            background-color : #855439;
        }
        table.listing tbody tr td.brown2,
        table.listing tbody tr.odd td.brown2 {
            background-color : #844204;
        }
        table.listing tbody tr td.brown3,
        table.listing tbody tr.odd td.brown3 {
            background-color : #8d340a;
        }
        }

    <span tal:replace='structure string:</style>'/>
</head>
<body>
    <pdf:spacer height="1cm">

    <h1 class="mainheader">
        <span i18n:translate="heading_scoresheet_pdf">Score Sheet for </span>
        <span tal:content="python:view.assessment().Title()"></span>
    </h1>
    
    <div tal:condition="view/activity_ids">
        <table border="1" class="listing frontpage">
            <tr> 
                <th></th>
                <div tal:repeat="activity_id view/activity_ids">
                    <th tal:content="python:activity_id"></th>
                </div>
            </tr>
            <tr tal:repeat="learner view/learners">
                <div tal:repeat="item python:view.scores_for_learner(learner.getObject())">
                    <td tal:attributes="class python:item[1]" tal:content="python:item[0]"></td>
                </div>
            </tr>
        </table>
    </div>
    <div tal:condition="not:view/activity_ids" >
        <h2 class="questionheader">
            <span i18n:translate="message_no_activities_found">No activities found. </span>
        </h2>
    </div>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
