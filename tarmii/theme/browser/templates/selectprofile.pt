<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="tarmii.theme"
      lang="en">

<body>
    <metal:main fill-slot="main">

        <h1 i18n:translate="heading_select_profile"> Select your profile</h1>
    
        <tal:profiles tal:condition="not:view/profiles">
            <div i18n:translate="message_no_profiles_exist">No profiles have been created yet.</div>
        </tal:profiles>

        <div tal:repeat="profile view/profiles">
            <form id="profile-login-form" action="@@select-profile" method="post" name="profile-login-form"> 
                <input type="submit" tal:attributes="value profile" name="buttons.profile.login.submit" id="buttons.profile.login.submit"/>
            </form>
        </div>

    </metal:main>
</body>
</html>
