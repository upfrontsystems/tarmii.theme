<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="tarmii.theme"
      lang="en">

<body>
    <metal:main fill-slot="main">
    
        <tal:profiles tal:condition="not:view/profiles">
            <div i18n:translate="message_no_profiles_exist">No profiles have been created yet.</div>
        </tal:profiles>

        <tal:profiles condition="view/profiles">
            <!-- display non-admin user profiles here -->
        </tal:profiles>

    </metal:main>
</body>
</html>
