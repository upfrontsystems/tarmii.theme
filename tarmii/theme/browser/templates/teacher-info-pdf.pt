<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
<html xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="tarmii.theme"
      lang="en">
<head>
    <base tal:attributes="href string:${here/portal_url}/" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <span tal:replace='structure string:<style>'/>
        <!-- Style for draft -->
        body{
            font-size:12pt;
        }

        h1.mainheader{
            font-size:160%;
            font-weight:bold;
            text-decoration:underline;
            text-align:center;
        }
        h2.questionheader{
            font-size:120%;
            font-weight:bold;
            margin-bottom: 0cm;
            padding-bottom: 0cm;
        }

        .questionoption{
            font-size:10pt;
            font-weight:bold;
        }

        p{
            font-size: 10pt;
            margin-top: 0cm;
            padding-top: 0cm;
            margin-bottom: 0cm;
            padding-bottom: 0cm;            
        }

        table.frontpage,
        div.activities {
            margin-left: 1cm;
            margin-right: 1cm;
            page-break-after: always;
        }

        table.frontpage td,
        table.frontpage th {
            padding: 4px 0 1px 0;
            margin: 0px;
            text-align: center;
        }

        table.frontpage td:first-child {
            text-align: left;
        }

        table.information td {
            padding-top: 2px;
            line-height: 2em;
            text-align: left;
        }

        div#footerContent h3 {
            text-align: center;
        }

        div#pageNumber {
            text-align: center;
        }

        div.itemnumber {
            margin-left: -1cm;
        }
        div.learner-info {
            margin-left: 1cm;
            margin-right: 1cm;
            text-align: center;
        }
        /* The default style */
        @page {
            @frame {
                margin: 2cm;
            }
            @frame footer {
                -pdf-frame-content: footerContent;
                margin-left: 3cm;
                margin-right: 3cm;
                height: 5cm;
                bottom: 2cm;
            }
        }
        @page notfirst {
            top: 1cm;
            left: 2cm;
            right: 1cm;
            bottom: 2cm;
            @frame footer {
                -pdf-frame-content: pageNumber;
                height: 1cm;
                bottom: 1cm;
            }
        }
    <span tal:replace='structure string:</style>'/>
</head>
<body>
    <pdf:spacer height="1cm">

    <h1 class="mainheader"><span i18n:translate="heading_teacher_information_pdf">Teacher Information for </span>
        <span tal:content="view/context/title"></span>
    </h1>
    <div>&nbsp;</div>

    <div class="learner-info">
        <table border="0" class="information">
            <tr>
                <td>
                    <h3>
                        <span i18n:translate="label_school_name">School Name</span>
                        <span>: </span><span tal:content="view/school_name"></span>
                    </h3>
                </td>
            </tr>
            <tr>
                <td>
                    <h3>
                        <span i18n:translate="label_date">Date</span>
                        <span>: </span><span tal:content="python:modules['DateTime'].DateTime().strftime('%d %M %Y')"></span>
                    </h3>
                </td>
            </tr>
            <tal:activities tal:condition="view/activities">
                <tal:topics condition="view/topictrees">        
                     <tr tal:repeat="topictree view/topictrees">
                        <td>
                            <h3>
                                <span tal:content="topictree/title"></span><span>: </span>
                                <span tal:content="python:view.topics(topictree)"></span>
                            </h3>
                        </td>
                    </tr>
               </tal:topics>
            </tal:activities>
        </table>
    </div>

    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>
        <table border="1" class="frontpage">
            <tr>
               <th></th>
               <div tal:repeat="activity view/activities">
                    <th><span tal:content="repeat/activity/number"></span><span>. </span><span tal:content="activity/id"></span></th>
                </div>
            </tr>
            <tr tal:repeat="topictree view/topictrees">
                <td><span tal:content="topictree/title"></span>
                </td>
               <div tal:repeat="topic python:view.topics_per_topictree(topictree)">
                    <td tal:content="topic"></td>
                </div>
            </tr>
        </table>
    </div>

    <div id="pageNumber">
        <pdf:pagenumber>
    </div>
</body>
</html>
