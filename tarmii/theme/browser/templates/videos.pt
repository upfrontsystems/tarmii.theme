<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="tarmii.theme"
      lang="en">

<body>
    <metal:main fill-slot="content-core"
        tal:define="batch view/videos">
            
        <tal:addvideo_visible condition="view/addvideo_visible">
            <form id="add-button-form" name="add-video-form" tal:attributes="action view/add_video_button_path">
                <input type="submit" value="Add video" tal:attributes="action view/add_video_button_path">
            </form>
        </tal:addvideo_visible>

        <tal:listing tal:condition="not:batch">
            <div i18n:translate="message_no_videos">No videos found in the system.</div>
        </tal:listing>

        <tal:listing tal:condition="batch">
            <div metal:use-macro="context/batch_macros/macros/navigation" />
                
                <tal:fill tal:repeat="brain batch">
                    <div tal:define="thumb brain/getObject">
                        <img tal:attributes="src string:${thumb/absolute_url}/image;
                                             alt thumb/Title" />
                        <p tal:content="thumb/Title"></p>
                    </div>
                </tal:fill>

            <div metal:use-macro="context/batch_macros/macros/navigation" />
        </tal:listing>

    </metal:main>
</body>
</html>
