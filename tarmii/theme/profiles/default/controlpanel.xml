<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="tarmii.theme"
    purge="False">
    
    <configlet
        title="Remote Server Settings"
        action_id="tarmii"
        appId="tarmii.theme" 
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@remote-server-settings"
        icon_expr="string:${portal_url}/maintenance_icon.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>

